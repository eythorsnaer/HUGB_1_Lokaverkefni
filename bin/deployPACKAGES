#!/bin/bash


if [ ! -d ~/tmp ]; then
        mkdir ~/tmp/
        mkdir ~/tmp/DOCUMENTS
        mkdir ~/tmp/PACKAGES
        mkdir ~/tmp/TESTREPORT
fi

WAR="TicTacToe-SoftwareBoys.war"
APP="TicTacToe-SoftwareBoys"
JAR="TicTacToe-SoftwareBoys.jar"
TAR="TicTacToe-SoftwareBoys.tar"
ZIP="TicTacToe-SoftwareBoys.zip"


bin/clean
bin/packageScripts/packageTAR
bin/packageScripts/packageZIP
bin/packageScripts/packageJAR
bin/packageScripts/packageWAR
bin/packageScripts/packageAPP



cp build/libs/${WAR} ~/tmp/PACKAGES
cp build/install/TicTacToe-SoftwareBoys/bin/${APP} ~/tmp/PACKAGES
cp build/libs/${JAR} ~/tmp/PACKAGES
cp build/distributions/${TAR} ~/tmp/PACKAGES
cp build/distributions/${ZIP} ~/tmp/PACKAGES






